{
    "name": "@r6db/desktop",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "build-deps": "electron-builder install-app-deps",
        "start": "yarn build && yarn electron",
        "electron": "cross-env DEBUG='r6db:*' NODE_ENV=development electron --inspect=5858 build/main/",
        "migration": "ts-node --project tsconfig.node.json ./node_modules/.bin/typeorm migration:generate -n NewMigration",
        "predev": "tsc -b tsconfig.node.json",
        "dev": "npm-run-all -l -p watch:main watch:renderer",
        "prewatch:main": "tsc -b tsconfig.node.json",
        "watch:main": "webpack --mode development --config webpack/main.js --watch",
        "watch:renderer": "webpack-dev-server --mode development --config webpack/renderer.js",
        "prebuild": "rimraf build && tsc -b tsconfig.node.json",
        "build": "webpack --config webpack/all.js",
        "lint": "pretty-quick --staged",
        "test": "echo 'no tests yet' && exit 0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint",
            "pre-push": "yarn test"
        }
    },
