{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "lib": ["es2017"],
        "module": "commonjs",
        "sourceMap": true,
        "target": "es2017",
        "baseUrl": ".",
        "outDir": "./build/main/",
        "composite": true,
        "jsx": "preserve",
        "paths": {
            "main/*": ["./src/main/*"],
            "shared/*": ["./src/shared/*"],
            "renderer/*": ["./src/renderer/*"]
        }
    },
    "references": [
        { "path": "../core" },
        { "path": "../utils" },
        { "path": "../constants" },
        { "path": "../interfaces" }
    ],
    "include": ["src/main/**/*.ts", "./src/main/declarations.d.ts"]
}
